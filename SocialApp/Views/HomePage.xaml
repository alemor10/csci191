<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialApp.Views.HomePage"
             xmlns:vm="clr-namespace:SocialApp.ModelViews"
             >
    <ContentPage.BindingContext>
        <vm:PicturesViewModel/>
    </ContentPage.BindingContext>
   
   <StackLayout Spacing="25" Padding="150">


        <Button x:Name="takePhoto" Text="Take Photo"/>
        <Button x:Name="pickPhoto" Text="Pick Photo"/>

        <Image x:Name="image"/>




    <Label Text="Hello this is going to be a Post" />
    <Entry Text="{Binding PicturePost.PictureTitle, Mode=TwoWay}"
           Placeholder="Post Title "/>

   <Picker x:Name="imageCategory"
            HorizontalOptions="FillAndExpand"
            SelectedItem="{Binding PicturePost.PictureCategory, Mode=TwoWay}"
   >
        <Picker.Items>
            <x:String>1</x:String> 
            <x:String>2</x:String>
            <x:String>3</x:String>
            <x:String>4</x:String>
        </Picker.Items>
   </Picker>
   <TimePicker x:Name="TimePicker">
        <TimePicker.Format>hh:mm tt</TimePicker.Format>
    </TimePicker>


    <Button Text="Save Picture"
            Command="{Binding SaveCommand}"/>

   </StackLayout>
</ContentPage>
